---
import { Image } from "astro:assets";
import Logo from "../images/logo.png";
const { title } = Astro.props;
---

<div class="navbar">
  <div class="container">
    <a href="/">
      <Image src={Logo} alt="Logo" width="50" height="50" />
    </a>
    <nav>
      <ul>
        <li><a class={title == "Home" ? "active" : ""} href="/">Home</a></li>
        <li>
          <a class={title == "Contact" ? "active" : ""} href="/contact"
            >Contact</a>
        </li>
        <li>
          <a class={title == "My Projects" ? "active" : ""} href="/myprojects"
            >My Projects</a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<style>
  a {
    text-decoration: none;
    color: white;
  }
  .navbar {
    padding: 10px 0;
    height: 70px;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  nav {
    display: flex;
    justify-content: space-between;
  }
  nav ul li {
    display: inline-block;
  }
  nav ul li a {
    margin: 0 10px;
    padding: 5px 10px;
    position: relative;
  }
  nav ul li a::before {
    content: "";
    display: block;
    width: 100%;
    height: 5px;
    background-color: var(--secondary-color);
    position: absolute;
    left: 0;
    right: 0;
    bottom: -5px;
    border-radius: 5px;
    visibility: hidden;
  }
  nav ul li a.active::before {
    visibility: visible;
  }
  nav ul li a:not(.active):hover::before {
    visibility: visible;
    opacity: 0.5;
  }
  @media (max-width: 888px) {
   
  }
</style>
