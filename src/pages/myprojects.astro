      font-size: 2.5rem;
    }

    .projects-hero h1::before {
      width: 150px;
    }

    .projects-blog .container {
      padding: 0 15px;
    }

    .project-post {
      margin-bottom: 60px;
      padding-bottom: 40px;
    }

    .project-header h2 {
      font-size: 1.8rem;
    }

    .tech-tags {
      gap: 8px;
    }

    .tech-tag {
      font-size: 0.8rem;
      padding: 4px 8px;
    }

   
  }
</style>
