    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .project-post {
    margin-bottom: 80px;
    padding-bottom: 60px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .project-post:last-child {
