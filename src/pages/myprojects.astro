<script>
  let currentSlideIndex: Record<string, number> = {};

  function changeSlide(project: string, direction: number): void {
    const slideshow = document.querySelector(
      `[data-project="${project}"]`
    ) as HTMLElement;
    const slides = slideshow.querySelectorAll(
      ".slide"
    ) as NodeListOf<HTMLElement>;

    // Initialize if not exists
    if (!currentSlideIndex[project]) {
      currentSlideIndex[project] = 0;
    }

    // Remove current active class
    slides[currentSlideIndex[project]].classList.remove("active");

    // Update index
    currentSlideIndex[project] += direction;

    // Wrap around
    if (currentSlideIndex[project] >= slides.length) {
      currentSlideIndex[project] = 0;
    }
    if (currentSlideIndex[project] < 0) {
      currentSlideIndex[project] = slides.length - 1;
    }

    // Add new active class
    slides[currentSlideIndex[project]].classList.add("active");
  }
  // Auto-advance slides every 5 seconds
  setInterval((): void => {
    const projects: string[] = ["photography", "restaurant", "blog", "zquizlet"];
    projects.forEach((project: string) => {
      const slideshow = document.querySelector(
        `[data-project="${project}"]`
      ) as HTMLElement;
      if (slideshow) {
        changeSlide(project, 1);
      }
    });
  }, 5000);

  // Initialize slide indexes
  document.addEventListener("DOMContentLoaded", (): void => {
    currentSlideIndex = {
      photography: 0,
      restaurant: 0,
      blog: 0,
      zquizlet: 0,
    };
  });
</script>

<style>
  .projects-hero {
    background: linear-gradient(
      to bottom,
      var(--bg-color) 0%,
      rgba(0, 0, 0, 1) 100%
    );
    padding: 100px 0 80px;
    text-align: center;
  }

  .projects-hero h1 {
    font-size: 4rem;
    color: white;
    margin-bottom: 20px;
    position: relative;
  }

  .projects-hero h1::before {
    content: "";
    display: inline-block;
    height: 15px;
    width: 300px;
    background-color: var(--secondary-color);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -5px;
    z-index: -1;
    border-radius: 2px;
  }

