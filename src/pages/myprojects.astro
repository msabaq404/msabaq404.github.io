    padding-left: 30px;
    margin-left: -30px;
  }

  .project-header {
    margin-bottom: 30px;
  }

  .project-meta {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
  }

  .project-category {
    background-color: var(--secondary-color);
    color: black;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .project-date {
    color: #ccc;
    font-size: 0.9rem;
  }

  .project-header h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 15px;
    line-height: 1.2;
  }

  .project-excerpt {
    font-size: 1.3rem;
    color: #ccc;
    line-height: 1.5;
    font-style: italic;
  }

  .project-image {
    margin: 30px 0;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }

  .project-image img {
    width: 100%;
    aspect-ratio: 2/1;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-image:hover img {
